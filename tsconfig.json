{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNEXT",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "baseUrl": "./src",
        "strict": true,
        "moduleResolution": "node",
        "declaration": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "paths": {
            "@containers/*": ["containers/*"],
            "@components/*": ["components/*"],
        },
    },
    "include": ["./src"]
}